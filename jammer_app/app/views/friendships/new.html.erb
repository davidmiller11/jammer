<!-- new.html.erb - friendships -->
<h1>Select which user to add as a friend</h1>

<%= form_tag "/users/#{current_user.id}/friendships" do %>
  <!-- default method is post -->

  <% @other_users.each do |user| %>
    
    <div>
      <%= user.first_name + " " + user.last_name %>
      <%= radio_button_tag 'friendship[friend_id]', user.id %>
    </div>

   

  <% end %>

 <%= hidden_field_tag 'friendship[user_id]', current_user.id %>

  <%= submit_tag "Add friend" %>

<% end %>