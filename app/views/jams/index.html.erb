<!-- index.html.erb - jams -->
<h2><%= current_user.index_view_header %></h2>

<% @jams.each do |j| %>
  <p>
    <div>
      <strong>Name:</strong> <%= link_to j.name, j %>
    </div>
    <div>
      <strong>Location:</strong> <%= j.location %>
    </div>
    <div>
      <strong>Description:</strong> <%= j.description %>
    </div>
    <div>
      <strong>Finalized?</strong> <%= j.finalized %>
    </div>      
  </p>
<% end %>

<div><%= link_to 'Create new jam', new_jam_path %></div>