<!-- views/jams/_form.html.erb -->
<%= simple_form_for @jam do |f| %>
  <%= f.input :name, placeholder: 'Untitled jam', label: 'Jam Title' %>
  <%= f.input :location, label: 'Where', placeholder: 'Enter a location' %>
  <%= f.input :description, label: 'Description' %>
  <%= f.button :submit, value: 'Create Jam' %>
<% end %>