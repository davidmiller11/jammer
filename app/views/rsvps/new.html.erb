<!-- new.html.erb - rsvps -->
<h2>Inviting friends to Jam</h2>

<h4>Select all friends to invite:</h4>
<%= form_tag '/rsvps' do %>

  <% @user.friends.each do |friend| %>
    
    <% if !@invitee_ids.include?(friend.id) %>

      <%= check_box_tag("invitees[#{friend.id}") %>
      <%= label_tag("invitees[#{friend.id}", friend.full_name) %><br />
    <% end %>

  <% end %>

  <%= submit_tag %>

<% end %>