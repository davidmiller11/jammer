<!DOCTYPE html>
<html>
<head>
  <title>Jammer | Let's Jam</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <header class="sixteen columns">
      <div class="top_header"></div>
      <% if current_user %>
        <div>
          Hi, <%= link_to current_user.first_name, current_user  %> | 
          <span><%= link_to 'Logout', logout_path %></span>
          <div class='logo'><a href="<%= user_url(current_user) %>"><%= image_tag 'logo.png' %></a></div>
        </div>
        <div class="nav">
          <% if current_user.admin == true %>
            <span><%= link_to 'All Friendships (admin)', '/friendships/all' %></span> |
            <span><%= link_to 'All Jams (admin)', jams_all_path %></span> |
          <% end %>
          <span><%= link_to "My Jams (#{current_user.jams.count})", jams_path %></span> |
          <span><%= link_to "My Invitations (#{current_user.jams_invited_to.count})", rsvps_path %></span> |
          <span><%= link_to "My Friends (#{current_user.friends.count})", user_friendships_path(current_user) %></span> |
          <span><%= link_to "All Users (#{User.all.count})", users_path %></span>
        </div> <!-- END NAV -->
      <% else %>
        <span><%= link_to 'Login', login_path %></span>
        | <span><%= link_to 'Sign up', new_user_path %></span>
        <div class='logo'><%= image_tag 'logo.png' %></div>
      <% end %>

      <div class="flash-container">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, class: name %>
        <% end %>
      <!-- </div> END FLASH-CONTAINER -->
    </header>
    <div class="wrapper">
      <%= yield %>
    </div>
  </div><!-- END CONTAINER -->
</body>
</html>
