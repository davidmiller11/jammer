<!-- show.html.erb - users -->
<h2><%= @user.first_name %>'s Home Page</h2>
<h4><%= link_to 'Edit Account', edit_user_path(@user) %></h4>
<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Username</th>
      <th>Email</th>
      <th>Admin?</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @user.first_name %></td>
      <td><%= @user.last_name %></td>
      <td><%= @user.user_name %></td>
      <td><%= @user.email %></td>
      <td><%= @user.admin %></td>
    </tr>
  </tbody>
</table>
